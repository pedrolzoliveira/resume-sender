{
    "compilerOptions": {
        "esModuleInterop": true,
        "sourceMap": false,
        "allowJs": true,
        "outDir": "dist",
        "target": "es6",
        "lib": ["es5", "es6", "DOM"],
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            "@application/*": ["application/*"],
            "@errors/*": ["errors/*"],
            "@infra/*": ["infra/*"],
            "@utils/*": ["utils/*"],
            "@factories/*": ["factories/*"],
        }
    },
    "include": ["src"],
    "exclude": [
        "**/__tests__/*",
        "*.spec.ts"
    ]
}